{
	"private": true,
	"scripts": {
		"lint": "xo && stylelint src/*.css",
		"lint-fix": "xo --fix; stylelint --fix src/*.css",
		"build": "webpack --mode=production",
		"watch": "webpack --mode=development --watch"
	},
	"dependencies": {
		"compare-urls": "^2.0.0",
		"fit-textarea": "^1.0.0",
		"indent-textarea": "^1.0.2",
		"linkifyjs": "^2.1.8",
		"webext-options-sync": "github:plibither8/webext-options-sync#options-logging",
		"webextension-polyfill": "^0.4.0"
	},
	"devDependencies": {
		"copy-webpack-plugin": "^5.0.0",
		"size-plugin": "^1.1.2",
		"stylelint": "^9.10.1",
		"stylelint-config-xo": "^0.13.0",
		"terser-webpack-plugin": "^1.2.3",
		"web-ext-submit": "^2.9.3",
		"webpack": "^4.29.4",
		"webpack-cli": "^3.2.3",
		"xo": "^0.24.0"
	},
	"xo": {
		"envs": [
			"browser"
		],
		"globals": [
			"browser"
		],
		"rules": {
			"import/no-unassigned-import": "off",
			"import/no-named-as-default": 0,
			"no-script-url": "off"
		}
	},
	"stylelint": {
		"extends": "stylelint-config-xo",
		"rules": {
			"selector-type-no-unknown": null,
			"declaration-no-important": null,
			"property-no-vendor-prefix": null,
			"property-blacklist": null,
			"selector-class-pattern": null,
			"selector-id-pattern": null,
			"rule-empty-line-before": null,
			"at-rule-empty-line-before": null
		}
	}
}
